<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="zsy.hibernate.day32.domain">
    <!--使用多个表 每个类使用一个表-->
    <class name="Employee" table="EMPLOYEES" discriminator-value="EE">
        <!--id-->
        <id name="id" column="ID">
            <generator class="increment"></generator>
        </id>
        <!--姓名-->
        <property name="name" column="NAME"></property>

        <!--子类使用单独的表-->
        <union-subclass name="HourlyEmployee" table="HOURLY_EMPLOYEE">
            <property name="rate" column="RATE"></property>
        </union-subclass>

        <!--子类使用单独的表-->
        <union-subclass name="SalaryEmployee" table="SALARY_EMPLOYEE">
            <property name="salary" column="SALARY"></property>
        </union-subclass>
    </class>
</hibernate-mapping>