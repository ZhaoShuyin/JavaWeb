<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd"><!---->
<struts>
    <package name="param" namespace="/param" extends="default">
        <!--静态参数-->
        <action name="par1" class="cn.struts.day2.param.action.Demo1Action">
            <!--<interceptor-ref name="staticParams"/>-->
            <param name="name">姓名哈啊哈</param>
        </action>
        <!--表单提交数据-->
        <action name="par2" class="cn.struts.day2.param.action.Demo2Action" />
        <!-- 动态参数注入：动作类和模型类分离 -->
        <action name="par3" class="cn.struts.day2.param.action.Demo3Action" />
        <!-- 动态参数注入：动作类和模型类分离,模型驱动 -->
        <action name="par4" class="cn.struts.day2.param.action.Demo4Action" />
    </package>


    <package name="regist" namespace="/regist" extends="default">
        <action name="regist" class="cn.struts.day2.regist.action.StudentAction" method="regist">
            <!-- 成功时转向视图 -->
            <result>/jsp/regist/success.jsp</result>
            <!-- 出错是转向视图 -->
            <result name="error">/jsp/regist/error.jsp</result>
            <!-- input逻辑视图：
    				用于数据回显（目前大家不是很理解）
    				用于显示错误提示信息
    				一般实际视图指向原来的输入页面
    		 -->
            <result name="input">/jsp/regist/regist.jsp</result>
        </action>
        <action name="query">

        </action>
    </package>

    <package name="val" namespace="/valid" extends="default">
        <action name="reg" class="cn.struts.day2.valid.action.StudentAction1" method="regist">
            <!-- 回显；错误提示 -->
            <result name="input">/jsp/valid/regist.jsp</result>
        </action>
        <action name="query" class="cn.struts.day2.valid.action.StudentAction1" method="query">

        </action>

        <action name="reg2" class="cn.struts.day2.valid.action.StudentAction" method="regist">
            <!-- 回显；错误提示 -->
            <result name="input">/jsp/valid/reg2.jsp</result>
        </action>
        <action name="query2" class="cn.struts.day2.valid.action.StudentAction" method="query">

        </action>
    </package>

    <package name="p1" namespace="/inl" extends="default">
        <action name="demo1" class="cn.struts.day2.i18n.action.Demo1Action">
            <result>/jsp/i18n/1.jsp</result>
        </action>
    </package>
</struts>
