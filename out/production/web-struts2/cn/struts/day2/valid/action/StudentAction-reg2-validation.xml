<?xml version="1.0" encoding="UTF-8"?>
<!-- dtd约束的位置：xwork-core-2.3.15.3.jar\xwork-validator-1.0.3.dtd -->
<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<!-- 如果用户输入的是空格，是允许的 -->
	<field name="name">
		<field-validator type="requiredstring">
			<!--允许空格-->
			<param name="trim">false</param>
			<!-- 给内置验证器对应的处理类注入参数 -->
			<message>请输入用户的姓名哈哈</message>
		</field-validator>
	</field>
	<!-- 密码：必须输入；符合3~8个数字组成 -->
	<field name="password">
		<field-validator type="requiredstring">
			<message>请输入密码</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex">
				<![CDATA[\d{3,8}]]>
			</param>
			<message>密码必须是3~8位数字组成</message>
		</field-validator>
	</field>
	<!-- 两次密码必须一致：换形式 -->
	<validator type="expression">
		<param name="expression">
			<![CDATA[password==repassword]]>
		</param>
		<message>两次密码必须一致</message>
	</validator>
	<!-- 年龄如果输入的话必须介于：1~150之间 -->
	<field name="age">
		<field-validator type="int">
			<param name="min">1</param>
			<param name="max">190</param>
			<message>年龄必须介于${min}~${max}之间</message>
		</field-validator>
	</field>
	<!-- 必须选择性别 -->
	<field name="gender">
		<field-validator type="required">
			<message>请确定您的性别</message>
		</field-validator>
	</field>
	<!-- 验证生日的范围：本地格式 1970-01-01~2020-12-31 -->
	<field name="birthday">
		<field-validator type="date">
			<param name="min">1970-01-01</param>
			<param name="max">2020-12-31</param>
			<message>生日必须介于${min}~${max}之间</message>
		</field-validator>
	</field>
	<!-- 邮箱要符合邮箱的格式 -->
	<field name="email">
		<field-validator type="email">
			<message>请求正确的邮箱</message>
		</field-validator>
	</field>
	<field name="url">
		<field-validator type="url">
			<message>网址错误，比如应该输入.http://www.itcast.cn</message>
		</field-validator>
	</field>
</validators>