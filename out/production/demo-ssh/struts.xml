<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <!--DEBUG模式-->
    <constant name="struts.devMode" value="true" />

    <package name="test" namespace="/test" extends="struts-default">
        <!-- class="com.zsy.ssh.action.TestAction" 修改为 从spring获取 Action 实例-->
        <action name="test" class="testAction">
            <result name="success">
                /index.jsp
            </result>
        </action>
        <action name="transaction" class="testAction" method="transaction">
            <result name="success">
                /index.jsp
            </result>
        </action>
        <action name="trano" class="testAction" method="trano">
            <result name="success">
                /index.jsp
            </result>
        </action>
    </package>

    <package name="user" namespace="/user" extends="struts-default,json-default">
        <action name="user" class="userQuery">
            <result type="json">
                <param name="root">object</param>
            </result>
        </action>
        <action name="transaction" class="userQuery" method="transaction">
            <result type="json">
                <param name="root">object</param>
            </result>
        </action>
    </package>
</struts>